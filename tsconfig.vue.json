{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs", 
        "sourceMap": true, 
        "noEmitHelpers": true, 
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [ 
            "vue",
            "es6-collections"
        ],
        "outDir": "./resource/dist",
        "rootDir": "./"
    },
    "exclude": [
        "src",
        "modules",
        "node_modules",
        "**/*.test.ts"
    ]
}
