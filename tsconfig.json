{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5", 
        "module": "commonjs",
        "sourceMap": true,
        "noEmitHelpers": true, 
        "importHelpers": true, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports":true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "lib": [
            "dom",
            "es7",
            "es6",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
        "outDir": "./dist",
        "paths": {
            "@utils": ["utils/index"],
            "@db": ["database/index"],
            "@modules/*": ["modules/*"],
            "@types/*": ["types/*"],
            "@models/*": ["models/*"]
        }
    },
    "exclude": [
        "node_modules", 
        "**/*.test.ts", 
        "assets"
    ]
}
