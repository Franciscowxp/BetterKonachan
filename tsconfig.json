{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs",
        "sourceMap": true,
        "noEmitHelpers": true, 
        "importHelpers": true, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports":true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es6",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist"
    },
    "files": [ "server.ts" ],
    "exclude": [
        "node_modules", 
        "**/*.test.ts", 
        "assets"
    ]
}
