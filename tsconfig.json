{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5", 
        "module": "commonjs",
        "sourceMap": true,
        "noEmitHelpers": true, 
        "importHelpers": true, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports":true,
        "allowUnreachableCode": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "lib": [
            "dom",
            "es7",
            "es6",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist",
        "paths": {
            "@util": ["util/index"],
            "@db": ["database/index"],
            "@module/*": ["module/*"],
            "@type/*": ["type/*"],
            "@model/*": ["model/*"],
            "@config": ["config/index"],
            "@controller/*": ["controller/*"],
            "@route/*": ["route/*"]
        }
    },
    "exclude": [
        "node_modules", 
        "**/*.test.ts", 
        "assets"
    ]
}
