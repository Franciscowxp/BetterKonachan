{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [150]
        },
        "quotemark": {
            "options": [
                "single",
                "avoid-escape"
            ]
        },
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "new-parens": true,
        "no-arg": true,
        "no-debugger": false,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-unused-expression": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [150]
        }
    }
}
